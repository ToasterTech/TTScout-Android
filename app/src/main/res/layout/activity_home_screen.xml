<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/black"
        android:gravity="center_horizontal"
        tools:context="org.toastertech.toasterscout.activities.HomeScreen">

    <ImageView android:layout_width="200dp" android:layout_height="200dp" android:src="@drawable/ttlogo"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="5dp" android:gravity="center_horizontal">

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/startScoutingButton"
                android:text="@string/startScoutingText"/>

    </LinearLayout>


</LinearLayout>
