<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="org.toastertech.toasterscout.activities.ScoutingActivity"
        android:weightSum="1">

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:weightSum=".99"
                  android:layout_weight="0.05" android:orientation="horizontal">

        <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33"
                android:id="@+id/matchNumTextField" android:inputType="number"/>

        <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33"
                  android:id="@+id/teamNumTextField" android:inputType="number"/>

        <EditText android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight=".33"
                  android:id="@+id/scoutNameTextField"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:weightSum=".99"
                  android:layout_weight="0.05" android:orientation="horizontal" android:gravity="center_vertical">

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Match #" android:textSize="18sp"
                android:layout_weight=".33" android:gravity="center_horizontal" android:textColor="@android:color/black"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Team #" android:textSize="18sp"
                  android:layout_weight=".33" android:gravity="center_horizontal" android:textColor="@android:color/black"/>

        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="Scout Name" android:textSize="18sp"
                  android:layout_weight=".33" android:gravity="center_horizontal" android:textColor="@android:color/black"/>

    </LinearLayout>

    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.8">


    </ScrollView>


    <!-- Button Browsing Bar -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:gravity="center_horizontal"
                  android:layout_weight="0.1" android:orientation="horizontal">

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Previous Match" android:id="@+id/previousMatch"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Next Match" android:id="@+id/nextMatchButton"/>

    </LinearLayout>

</LinearLayout>
